<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.danco.homework5.h255danco.fragment.FloatingActionFragment">


    <com.example.danco.homework5.h255danco.view.CustomComponent
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#33000000"
        android:layout_gravity="top|start"
        app:leftColor="@color/red_A400"
        app:rightColor="@color/indigo_500"
        android:padding="0dp"
        app:paintSize="4dp"
        />

    <com.example.danco.homework5.h255danco.view.CustomComponent
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#33000000"
        android:layout_gravity="top|end"
        app:leftColor="@color/red_A700"
        app:rightColor="@color/material_blue_grey_800"
        android:padding="8dp"
        app:paintSize="4dp"
        />

    <com.example.danco.homework5.h255danco.view.CustomComponent
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:background="#33000000"
        android:layout_gravity="center_vertical|left"
        app:leftColor="@color/red_A700"
        app:rightColor="@color/red_A400"
        app:rightColorPercentage="50"
        android:scaleType="centerInside"
        android:padding="8dp"
        app:paintSize="4dp"
        />

    <com.example.danco.homework5.h255danco.view.CustomComponent
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:background="#33000000"
        android:layout_gravity="center_vertical|right"
        app:leftColor="@color/red_A700"
        app:rightColor="@color/grey_300"
        app:rightColorPercentage="25"
        android:scaleType="centerInside"
        android:padding="8dp"
        app:paintSize="4dp"
        />

    <ImageView
        android:id="@+id/floatingActionImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerInside"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/action_button_layer_list"
        android:clickable="true"
        />

</FrameLayout>
